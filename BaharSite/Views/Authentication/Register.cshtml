@using BaharShop.Application.Services.SignIn_v_Login

@model RequestRegisterUserDto

@{
    ViewData["Title"] = "ثبت نام";
}



<!-- UTF-8 Encoding -->
<meta charset="UTF-8">

<div class="RegisterContainer">
    <form asp-action="Register" method="post" class="register-form" id="registerForm">
        <h2>ثبت نام</h2>

        <div class="input-group">
            <label asp-for="Email">ایمیل</label>
            <input asp-for="Email" type="email" id="email" name="email" required>
        </div>

        <div class="input-group">
            <label asp-for="Username">نام کاربری</label>
            <input asp-for="Username" type="text" id="username" name="username" required>
        </div>

        <div class="input-group">
            <label asp-for="FirstName">نام</label>
            <input asp-for="FirstName" type="text" id="firstName" name="firstName" required>
        </div>

        <div class="input-group">
            <label asp-for="LastName">نام خانوادگی</label>
            <input asp-for="LastName" type="text" id="lastName" name="lastName" required>
        </div>

        <div class="input-group">
            <label asp-for="Password">رمز عبور</label>
            <input asp-for="Password" type="password" id="password" name="password" required>
        </div>

        <div class="input-group">
            <label asp-for="RePassword">تکرار رمز عبور</label>
            <input asp-for="RePassword" type="password" id="RePassword" name="RePassword" required>
        </div>

        <button type="submit" style="font-family: Bykan; font-size: 18px;">ثبت نام</button>

        <p>آیا اکانت داری? <a asp-controller="Authentication" asp-action="Login">ورود</a></p>
    </form>
</div>

<!-- Show SweetAlert error if registration fails -->
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{

    <script>
        Swal.fire({
            icon: 'error',
            title: 'خطا!',
            text: '@Html.Raw(ViewBag.ErrorMessage)',
            confirmButtonColor: '#d33'
        });
    </script>


}
